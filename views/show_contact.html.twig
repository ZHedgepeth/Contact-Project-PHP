<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <title>Contacts</title>
    </head>
    <body>
        <div class="container">
        <h1>Enter your contact info below!</h1>

        <form action="/create_contacts" method="post">
          <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" name="name" id="name">

              <label for="address">Address</label>
              <input type="text" class="form-control" name="address" id="address">

              <label for="phone">Phone Number</label>
              <input type="text" class="form-control" name="number" id="number">
          </div>

            <button type="submit" class="btn btn-success">ADD CONTACT</button>
        </form>

            {% if contacts is not empty %}
                <p>You created a contact!</p>
                <ul>
                    {% for contact in contacts %}
                        <li>Name: {{ contact.getName }}</li>
                        <li>Address: {{ contact.getAddress }}</li>
                        <li>Phone Number: {{ contact.getNumber }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

        <form action='/delete_contacts' method='post'>
          <br>
            <button type='submit'>Clear</button>
        </form>
        </div>
    </body>
</html>
